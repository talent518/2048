                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/bg_block_8"
                    android:gravity="center"
                    android:text="8"
                    android:textColor="@color/blockTextColor_8"
                    android:textSize="@dimen/text_size_1font"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/bg_block_16"
                    android:gravity="center"
                    android:text="16"
                    android:textColor="@color/blockTextColor_16"
                    android:textSize="@dimen/text_size_2font"
                    android:textStyle="bold" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:divider="@drawable/spacer_horizontal"
                android:orientation="horizontal"
                android:showDividers="middle">>

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/bg_block_256"
                    android:gravity="center"
                    android:text="256"
                    android:textColor="@color/blockTextColor_256"
                    android:textSize="@dimen/text_size_3font"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
