                    android:gravity="center"
                    android:text="128"
                    android:textColor="@color/blockTextColor_128"
                    android:textSize="@dimen/text_size_3font"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/bg_block_64"
                    android:gravity="center"
                    android:text="64"
                    android:textColor="@color/blockTextColor_64"
                    android:textSize="@dimen/text_size_2font"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/bg_block_32"
                    android:gravity="center"
                    android:text="32"
                    android:textColor="@color/blockTextColor_32"
                    android:textSize="@dimen/text_size_2font"
                    android:textStyle="bold" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:divider="@drawable/spacer_horizontal"
                android:orientation="horizontal"
                android:showDividers="middle">>

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/bg_block_512"
                    android:gravity="center"
                    android:text="512"
                    android:textColor="@color/blockTextColor_512"
                    android:textSize="@dimen/text_size_3font"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/bg_block_1024"
                    android:gravity="center"
                    android:text="1024"
                    android:textColor="@color/blockTextColor_1024"
                    android:textSize="@dimen/text_size_4font"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/bg_block_2048"
                    android:gravity="center"
                    android:text="2048"
                    android:textColor="@color/blockTextColor_2048"
                    android:textSize="@dimen/text_size_4font"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/bg_block_4096"
                    android:gravity="center"
                    android:text="4096"
                    android:textColor="@color/blockTextColor_4096"
                    android:textSize="@dimen/text_size_4font"
                    android:textStyle="bold" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:divider="@drawable/spacer_horizontal"
                android:orientation="horizontal"
                android:showDividers="middle">>

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/bg_block_65536"
                    android:gravity="center"
                    android:text="65536"
                    android:textColor="@color/blockTextColor_65536"
                    android:textSize="@dimen/text_size_5font"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/bg_block_32768"
                    android:gravity="center"
                    android:text="32768"
                    android:textColor="@color/blockTextColor_32768"
                    android:textSize="@dimen/text_size_5font"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/bg_block_16384"
                    android:gravity="center"
                    android:text="16384"
                    android:textColor="@color/blockTextColor_16384"
                    android:textSize="@dimen/text_size_5font"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/bg_block_8192"
                    android:gravity="center"
                    android:text="8192"
                    android:textColor="@color/blockTextColor_8192"
                    android:textSize="@dimen/text_size_4font"
                    android:textStyle="bold" />
            </LinearLayout>

        </LinearLayout>
    </net.yeah.talent518.abao2048.RatioLayout>

</LinearLayout>
